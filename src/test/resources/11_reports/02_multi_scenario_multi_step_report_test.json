{
  "scenarioName": "Will Get A bath Room Multi Multi",
  "loop": 2,
  "steps": [
    {
      "name": "get_shower_room", //<-- with comments
      "url": "http://localhost:9998/home/bathroom/1",
      "operation": "GET",
      "request": {
        "headers": {
          "Content-Type": "application/json;charset=UTF-8",
          "Cookie": "cookie_123"
        },
        "body": {
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "id": 1,
          "name": "Shower",
          "availability": true
        }
      }
    },
    {
      "name": "get_another_shower_room", //<-- with comments
      "url": "http://localhost:9998/home/bathroom/2${$.get_shower_room.response.body.id}",
      "operation": "GET",
      "loop": 3,
      "request": {
        "headers": {
          "Content-Type": "application/json;charset=UTF-8",
          "Cookie": "some_cookie___${$.get_shower_room.response.body.id}"
        },
        "body": {
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "id": 21,
          "name": "Shower-21",
          "availability": true
        }
      }
    }

  ]
}
