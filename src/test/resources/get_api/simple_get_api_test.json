{
    "scenarioName": "As simple GET request response",
    "steps": [
        {
            "name": "find_match",
            "url": "/api/v1/search/persons",
            "operation": "GET",
            "request": {
                "queryParams": {
                    "lang": "Amazing",
                    "city": "Lon"
                }
            },
            "assertions": {
                "status": 200,
                "body": {
                    "exactMatches": true,
                    "name": "Mr Bean",
                    "lang": "Amazing",
                    "city": "Lon"
                }
            }
        }
    ]
}
